window: 800 480

turnsignal: class {
	path: line -0.5 0  0.5 0  0.5 1  1 1  0 2  -1 1  -0.5 1  -0.5 0

	edge: 0.1px rgb 1 1 1
	fill: rgba 0 0 0 0.7

	pressed: state {
		edge: 0.2px rgb 1 1 1
		fill: rgba 0.2 0.2 0.2 0.9

		on press: default
		on release: default
	}

	on press: pressed
}

leftturnsignal: turnsignal {
	translate: 80 240
	rotate: 90
	scale: 30
}

rightturnsignal: turnsignal {
	translate: 720 240
	rotate: -90
	scale: 30
}

